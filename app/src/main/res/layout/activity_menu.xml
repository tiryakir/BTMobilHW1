<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuLayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FACF50"
    tools:context=".MenuActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="661dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp">

        <ImageButton
            android:id="@+id/soruEkleButton"
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="174dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="TODO"
            app:layout_constraintBottom_toTopOf="@+id/sinavOlButton"
            app:layout_constraintEnd_toStartOf="@+id/soruListeleButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/SoruEkle" />

        <ImageButton
            android:id="@+id/soruListeleButton"
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="174dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/SınavAyarButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/soruEkleButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/SoruListele" />

        <ImageButton
            android:id="@+id/sinavOlButton"
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/SınavAyarButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/soruEkleButton"
            app:srcCompat="@drawable/SoruOl" />

        <ImageButton
            android:id="@+id/SınavAyarButton"
            android:layout_width="155dp"
            android:layout_height="154dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sinavOlButton"
            app:layout_constraintTop_toBottomOf="@+id/soruListeleButton"
            app:srcCompat="@drawable/SoruAyar" />

        <TextView
            android:id="@+id/MenuText"
            android:layout_width="233dp"
            android:layout_height="63dp"
            android:autoText="false"
            android:elegantTextHeight="false"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="MENÜ"
            android:textSize="48sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="46dp" />

        <ImageButton
            android:id="@+id/cikisYap"
            android:layout_width="228dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/cikisyap"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="561dp" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>